set VERBOSITY=0
set REPRODUCIBLE OUTPUT=true
subsection Geometry
  set NATOMS=1
  set NATOM TYPES=1
  set ATOMIC COORDINATES FILE      = @SOURCE_DIR@/PtCoordinates.inp
  set DOMAIN VECTORS FILE = @SOURCE_DIR@/PtDomainVectors.inp
end

subsection Boundary conditions
  set PERIODIC1                       = true
  set PERIODIC2                       = true
  set PERIODIC3                       = true
end

subsection Brillouin zone k point sampling options
  subsection Monkhorst-Pack (MP) grid generation
    set SAMPLING POINTS 1 = 2
    set SAMPLING POINTS 2 = 1
    set SAMPLING POINTS 3 = 1
    set SAMPLING SHIFT 1 = 0
    set SAMPLING SHIFT 2 = 0
    set SAMPLING SHIFT 3 = 0
  end
  set USE GROUP SYMMETRY = false
  set USE TIME REVERSAL SYMMETRY = false
end

subsection Parallelization
   set NPKPT = 2
end

subsection Finite element mesh parameters
  set POLYNOMIAL ORDER = 3
  subsection Auto mesh generation parameters
    set MESH SIZE AROUND ATOM = 0.51
    set ATOM BALL RADIUS=8.0
  end
end

subsection DFT functional parameters
  set EXCHANGE CORRELATION TYPE   = GGA-PBE+U
  set PSP CUTOFF IMAGE CHARGES        = 40.0
  set PSEUDOPOTENTIAL CALCULATION = true
  set PSEUDOPOTENTIAL FILE NAMES LIST = @SOURCE_DIR@/PtPseudo.inp
  set PSEUDO TESTS FLAG = true
  subsection Hubbard Parameters
    set HUBBARD PARAMETERS FILE = @SOURCE_DIR@/PtHubbard.inp
    set MIXING OCCUPATION = 1.0
  end
end

subsection SCF parameters
  set MIXING PARAMETER =0.1
  set COMPUTE ENERGY EACH ITER = false
  set MIXING METHOD= ANDERSON
  set STARTING WFC             = ATOMIC
  set TEMPERATURE              = 500
  set TOLERANCE                = 1e-3
  subsection Eigen-solver parameters
    set NUMBER OF KOHN-SHAM WAVEFUNCTIONS                    = 30
    set ENABLE HAMILTONIAN TIMES VECTOR OPTIM                = false
    set CHEBYSHEV FILTER TOLERANCE                           = 1e-3
    set OVERLAP COMPUTE COMMUN CHEBY                         = false 
  end
end
